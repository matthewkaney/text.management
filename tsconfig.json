{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["core/*"],
      "@management/lang-*": ["packages/languages/*"],
      "@management/*": ["node_modules/@management/*/src"]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "core/extensions/firebase/*",
    "packages/languages/supercollider/*"
  ]
}
