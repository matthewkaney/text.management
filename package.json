{
  "name": "@management/text",
  "version": "0.0.1",
  "workspaces": [
    "packages/codemirror/*",
    "packages/languages/*"
  ],
  "private": "true",
  "description": "Experimental livecode editor",
  "scripts": {
    "build-packages": "parcel build packages/{codemirror,languages}/*",
    "build": "npm run build-packages && parcel build .",
    "start": "node dist/server/index.js"
  },
  "client": "dist/client/index.html",
  "server": "dist/server/index.js",
  "targets": {
    "client": {
      "source": "app/client/index.html",
      "context": "browser"
    },
    "server": {
      "source": "app/server/index.ts",
      "context": "node"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mindofmatthew/text.management.git"
  },
  "author": "Matthew Kaney",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/mindofmatthew/text.management/issues"
  },
  "homepage": "https://github.com/mindofmatthew/text.management#readme",
  "dependencies": {
    "@codemirror/collab": "^6.0.0",
    "@codemirror/commands": "^6.0.0",
    "@codemirror/language": "^6.0.0",
    "@codemirror/legacy-modes": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@lezer/highlight": "^1.0.0",
    "clsx": "^1.1.1",
    "commander": "^9.1.0",
    "codemirror": "^6.0.0",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.5.0",
    "@parcel/transformer-inline-string": "^2.4.0",
    "@parcel/transformer-typescript-types": "^2.5.0",
    "@types/express": "^4.17.13",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/webmidi": "^2.0.6",
    "@types/ws": "^7.4.1",
    "parcel": "^2.4.0",
    "process": "^0.11.10",
    "typescript": "^4.4.4"
  }
}
