{
  "name": "@management/text",
  "version": "0.1.0",
  "workspaces": [
    "app/*",
    "packages/codemirror/*",
    "packages/text-management"
  ],
  "private": "true",
  "description": "Experimental livecode editor",
  "scripts": {
    "build-packages": "parcel build packages/codemirror/* --no-cache",
    "prepare": "npm run build-packages && parcel build packages/text-management",
    "start": "node packages/text-management/dist/server/index.js",
    "build:desktop": "parcel build app/desktop/ --target app --target renderer",
    "start:desktop": "electron app/desktop/dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mindofmatthew/text.management.git"
  },
  "author": "Matthew Kaney",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/mindofmatthew/text.management/issues"
  },
  "homepage": "https://github.com/mindofmatthew/text.management#readme",
  "dependencies": {
    "@codemirror/collab": "^6.0.0",
    "@codemirror/commands": "^6.0.0",
    "@codemirror/lang-javascript": "^6.0.0",
    "@codemirror/language": "^6.0.0",
    "@codemirror/legacy-modes": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@lezer/highlight": "^1.0.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.0",
    "@parcel/transformer-typescript-types": "^2.8.0",
    "parcel": "^2.8.0",
    "process": "^0.11.10",
    "typescript": "^4.4.4"
  }
}
