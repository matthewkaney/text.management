{
  "name": "@management/text-management-desktop",
  "author": "Matthew Kaney",
  "version": "0.7.0",
  "private": "true",
  "description": "Live code editor",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "electron-version": "node -p \"require('../../node_modules/electron/package.json').version\"",
    "build": "parcel build --target main --target preload --target renderer",
    "pack": "electron-builder -c.electronVersion $(npm run electron-version -s)",
    "dist": "electron-builder",
    "postversion": "git add package.json"
  },
  "build": {
    "productName": "Text Management",
    "linux": {
      "executableName": "Text Management"
    },
    "files": [
      "./build/**/*"
    ],
    "npmRebuild": false
  },
  "main": "build/main.js",
  "targets": {
    "renderer": {
      "source": "src/renderer/index.html",
      "distDir": "build",
      "context": "browser",
      "publicUrl": "./..",
      "includeNodeModules": true
    },
    "preload": {
      "source": "src/preload/index.ts",
      "distDir": "build",
      "context": "electron-main",
      "sourceMap": {
        "inline": true
      },
      "includeNodeModules": {
        "electron": false
      }
    },
    "main": {
      "source": "src/main/index.ts",
      "distDir": "build",
      "context": "electron-main",
      "includeNodeModules": {
        "electron": false,
        "events": false,
        "path": false,
        "util": false
      }
    }
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fix-path": "^4.0.0"
  }
}
