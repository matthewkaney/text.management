{
  "name": "@management/text-management-filork-web",
  "version": "0.9.0",
  "private": "true",
  "bin": {
    "filork": "dist/cli/main.js"
  },
  "targets": {
    "web": {
      "source": "src/index.html",
      "distDir": "dist/web"
    },
    "cli": {
      "source": "cli/main.ts",
      "context": "node",
      "distDir": "dist/cli",
      "includeNodeModules": {
        "firebase": false
      }
    }
  },
  "scripts": {
    "prepare": "npm run build:cli",
    "dev": "parcel serve --target web",
    "build": "parcel build --target web",
    "build:cli": "parcel build --target cli",
    "postversion": "git add package.json",
    "preview": "npm run build && firebase hosting:channel:deploy filork --only filork"
  }
}
